<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/img_movie_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/movie_thumb_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image" />

            </FrameLayout>

            <ScrollView
                android:id="@+id/viewB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/default_half_padding">

                    <include
                        android:id="@+id/inner_layout"
                        layout="@layout/activity_details_common" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_unfav"
            app:layout_anchor="@id/viewA"
            app:layout_anchorGravity="bottom|right|end" />

        <ProgressBar
            android:id="@+id/pg_progress"
            style="@style/ProgressBar"
            app:layout_anchorGravity="center" />

    </android.support.design.widget.CoordinatorLayout>

</layout>